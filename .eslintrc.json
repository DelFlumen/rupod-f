{
  "root": true,
  "parser": "@typescript-eslint/parser",
  "parserOptions": {
    "ecmaFeatures": {
      "tsx": true,
      "modules": true,
      "html": false
    },
    "parser": "@typescript-eslint/parser",
    "sourceType": "module" 
  },
  "plugins": [
    "@typescript-eslint",
    "eslint-plugin-react",
    "@typescript-eslint/parser"
  ],
    // "extends": [
  //   "react-app",
  //   "@nvt/cs/rules/react",
  //   "@nvt/cs/rules/typescript",
  //   "@nvt/cs/rules/security"
  // ],
  "extends": "eslint:recommended",
  "rules": {
    "react/prop-types": 0,
    "react/boolean-prop-naming": 0,

    "security/detect-object-injection": 0
  },

  "overrides": [
    {
      "files": ["**/*.stories.*"],

      "rules": {
        "import/no-anonymous-default-export": 0
      }
    }
  ]
}
